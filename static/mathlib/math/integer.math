# INTEGER FUNCTIONS
CONST ABS = FN(X) |X|

SGN = FN(X) 1, X > 0
SGN = FN(X) -1, X < 0
SGN = FN(X) 0
FREEZE($SGN)

CONST TRUNC = FN(X) INT(X)
CONST FRAC = FN(X) X - FLOOR(X)
CONST FRAC2 = FN(X) |X| - FLOOR(|X|)
CONST FRAC3 = FN(X) X - INT(|X|) * SGN(X)

# UNIT TESTS
ASSERT(ABS(1) == 1)
ASSERT(ABS(-1) == 1)
ASSERT(SGN(-123) == -1)
ASSERT(SGN(123) == 1)
ASSERT(SGN(0) == 0)
ASSERT(TRUNC(1.2) == 1)
ASSERT(TRUNC(1.9) == 1)
ASSERT(TRUNC(-1.2) == -1)
ASSERT(TRUNC(-1.9) == -1)