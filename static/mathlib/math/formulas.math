IMPORT "MATHLIB/MATH/ROOT.MATH"

# MISC FORMULAS
CONST FN HYPOT(X, Y) = SQRT(X ^ 2 + Y ^ 2)
CONST FN FAC(X) = X == 0 ? 1 : X * FAC(X - 1)
CONST FN FIB(X) = X == 0 ? 0 : X < 3 ? 1 : FIB(X - 1) + FIB(X - 2)

# UNIT TESTS
ASSERT(HYPOT(3, 4) == 5)
ASSERT(FAC(0) == 1)
ASSERT(FAC(3) == 6)
ASSERT(FAC(5) == 120)
ASSERT(FIB(0) == 0)
ASSERT(FIB(2) == 1)
ASSERT(FIB(10) == 55)