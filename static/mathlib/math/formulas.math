IMPORT "MATHLIB/MATH/ROOT.MATH"

# MISC FORMULAS
CONST HYPOT = FN(X, Y) SQRT(X ^ 2 + Y ^ 2)

FAC = FN(X) 1, X == 0
FAC = FN(X) X * FAC(X - 1)
FREEZE($FAC)

FIB = FN(X) 0, X == 0
FIB = FN(X) 1, X < 3
FIB = FN(X) FIB(X - 1) + FIB(X - 2)
FREEZE($FIB)

# UNIT TESTS
ASSERT(HYPOT(3, 4) == 5)
ASSERT(FAC(0) == 1)
ASSERT(FAC(3) == 6)
ASSERT(FAC(5) == 120)
ASSERT(FIB(0) == 0)
ASSERT(FIB(2) == 1)
ASSERT(FIB(10) == 55)